# ===========================
# Vivare API - Environment Variables
# ===========================
# Copy to .env.local and fill in values

# Server
PORT=3001
NODE_ENV=development

# Stays.net API
STAYS_API_URL=https://api.stays.net/external/v1
STAYS_API_KEY=your_stays_api_key_here
STAYS_CLIENT_ID=your_stays_client_id_here

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Firebase / Firestore
GOOGLE_CLOUD_PROJECT=your-project-id
# For local dev, use Firebase Admin SDK service account JSON path:
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Checkout Configuration
CHECKOUT_HOLD_TTL_MINUTES=15
CHECKOUT_QUOTE_TTL_MINUTES=30

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=debug
